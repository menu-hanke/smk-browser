{
  "name": "electron-react-typescript-template",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "notistack": "^1.0.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-window": "^1.8.6",
    "web-vitals": "^1.1.2",
    "wkt": "^0.1.1"
  },
  "scripts": {
    "start-dev": "concurrently \"tsc -w\" \"react-scripts\" \"electron . \"",
    "start": "npm run build && electron ./build/index.js",
    "build": " PUBLIC_URL=./ react-scripts build && tsc -p electron/tsconfig.json",
    "build-windows": "set PUBLIC_URL=./&&react-scripts build&&tsc -p electron/tsconfig.json",
    "prep": "cp electron-package.json build/package.json && cd build/ && npm install",
    "prep-windows": "cp electron-package.json build/package.json&&cd build/&&npm install",
    "electron-packager-windows": "cd build/&&npx electron-packager . smk-browser --platform=win32 --out=release-builds --version-string.ProductName=SMK-Browser",
    "electron": "cross-env NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "publish": "electron-forge publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@jest/console": "^26.6.2",
    "@jest/core": "^26.6.2",
    "@jest/types": "^26.6.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.24",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-window": "^1.8.5",
    "concurrently": "^6.2.2",
    "electron": "^14.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^15.4.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.4.3",
    "wait-on": "^6.0.0"
  },
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Pauli Sairanen",
              "name": "electron-publish-example"
            }
          }
        }
      ]
    }
  }
}
